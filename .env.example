# データベース設定
DB_HOST=localhost
DB_PORT=3306
DB_USER=your_username
DB_PASSWORD=your_password
DB_NAME=matemane

# セキュリティ設定
SECRET_KEY=your-secret-key-here
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=1440

# アプリケーション設定
DEBUG=True
CORS_ORIGINS=["http://localhost:8000"]

# ラベル印刷設定
LABEL_WIDTH_MM=50
LABEL_HEIGHT_MM=30
QR_SIZE_MM=20

# HTTPS/SSL 設定（必要に応じて有効化）
# 別PCからのカメラ利用（getUserMedia）にはHTTPSが必要です。
# 自己署名でも可。以下にPEMファイルのパスを設定してください。
# 例: instance\ssl\cert.pem と instance\ssl\key.pem
# 設定しない場合はHTTPで起動します。
SSL_CERTFILE=
SSL_KEYFILE=